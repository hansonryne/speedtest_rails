<p id="notice"><%= notice %></p>

<h1>Speed Tests</h1>

<%= render 'form' %>

<% if @last_test %>
<h2>Most Recent Stats:</h2>
<p>Ping: <%= @last_test.ping %></p>
<p>Downlaod: <%= @last_test.download %></p>
<p>Upload: <%= @last_test.upload %></p>
<% end %>

<h2>Latency (ms)</h2>
<%= line_chart @pings %>
<h2>Download Speed</h2>
<%= line_chart @download_speeds %>
<h2>Upload Speed</h2>
<%= line_chart @upload_speeds %>

<h2>Server Usage</h2>
<%= bar_chart @bar_chart %>


